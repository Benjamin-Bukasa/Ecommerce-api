datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  addresses Address[] // Relation : un utilisateur peut avoir plusieurs adresses
}

model Address {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  city         String
  district     String
  quarter      String
  township     String
  street       String
  parcelNumber String
  phone        String
  userId       String @db.ObjectId
  user         User   @relation(fields: [userId], references: [id]) // Relation avec User
}
